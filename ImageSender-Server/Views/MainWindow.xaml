<Window x:Class="ImageSender_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSender_Server"
        mc:Ignorable="d"
        Title="Image Sender - Server" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="{Binding Image}" Grid.Row="0" Margin="10"/>
        <Button Content="Create Server" Grid.Row="1" Margin="10" FontSize="17" Command="{Binding CreateServerCommand}"/>
    </Grid>
</Window>
